<%= form_for @event do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, size: 40 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 80, rows: 7 %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= f.datetime_select :starts_at %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location, size: 40 %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %>
  </p>
  <p>
    <%= f.label :image_file_name %>
    <%= f.text_field :image_file_name %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to 'Cancel', @event %>
  </p>
<% end %>
