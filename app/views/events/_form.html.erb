<%= form_for @event do |f| %>
  <div>
    <%= render 'shared/errors', object: @event %>
  </div>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 7 %>
  </p>
  <p>
    <%= f.label :starts_at %>
    <%= f.datetime_select :starts_at %>
  </p>
  <p>
    <%= f.label :location %>
    <%= f.text_field :location, size: 40 %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </p>
  <p>
    <%= f.label :image_file_name %>
    <%= f.text_field :image_file_name %>
  </p>
  <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </p>
  <p>
    <%= f.submit %>
    <%= link_to 'Cancel', @event %>
  </p>
<% end %>
