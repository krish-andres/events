<header>
  <h1><%= @event.name %></h1>
  <%= image_for(@event) %>
</header>
<p><%= @event.description %></p>

<h3>When:</h3>
<p><%= @event.starts_at %></p>

<h3>Where:</h3>
<p><%= @event.location %></p>

<h3>Price:</h3>
<p><%= event_price(@event) %></p>

<h3>Capacity:</h3>
<p><%= @event.capacity %></p>

<nav>
  <%= link_to 'Edit', edit_event_path(@event) %> || 
  <%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>
